{% extends "index.xml" %}

{% block content %}

<h1>Profile Page for {{user.first_name}} {{user.last_name}} ({{user.username}})</h1>

<h3>Personal Information</h3>

<table class="pure-table pure-table-striped">
  <tr>
	<td>Username</td>
	<td>{{user.username}}</td>
  </tr>
  <tr>
	<td>Email</td>
	<td>{{user.email}}</td>
  </tr>
  <tr>
	<td>Name</td>
	<td>{{user.first_name}} {{user.last_name}}</td>
  </tr>
</table>

<h3>Connected Accounts</h3>



<h3>Shared Readinglist</h3>



<h3>Ongoing Projects</h3>

{% endblock %}
